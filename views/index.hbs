<h1>Welcome to the SLOW-DRONGO bookstore</h1>

<div class="books">
  <ul style="list-style-type:none">
    <a href="/authors/list">Authors</a>
    <a href="/genre/list">Genre list </a> 

    {{#each books}}
      <a href="/book/{{id}}">
        <h3>{{title}}</h3>
        <li>{{description}}</li>
        <li><img src="{{img_url}}" width="400px" height="300px" alt="Image" /></li>
      </a>
    {{else}}
      <h1>Not Found</h1>
    {{/each}}

  </ul>
</div>
