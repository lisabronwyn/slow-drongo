<div class="books">
  <ul style="list-style-type:none">

    <!-- <a href="/">Home</a> -->


      <h2>List of All Authors</h2>
    {{#each authors}}
      <a href="/author/{{id}}">
        <h3>{{name}}</h3>
        <h4>{{bio}}</h4>
        <li><img class="img-responsive" src="{{img_url}}" width="300px" height="200px" alt="Image" /></li>
      </a>
    {{else}}
      <h1>Not Found</h1>
    {{/each}}

  </ul>
</div>
