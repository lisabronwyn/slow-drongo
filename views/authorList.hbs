<h1>Welcome to the SLOW-DRONGO bookstore</h1>

<div class="books">
  <ul style="list-style-type:none">

    <a href="/">Home</a>


      <h1>List of All Authors</h1>
    {{#each authors}}
      <a href="/author/{{id}}">
        <h3>{{name}}</h3>
        <li>{{bio}}</li>
        <li><img class="img-responsive" src="{{img_url}}" width="300px" height="200px" alt="Image" /></li>
      </a>
    {{else}}
      <h1>Not Found</h1>
    {{/each}}

  </ul>
</div>
